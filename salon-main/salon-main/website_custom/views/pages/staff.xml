    <template id="appointment_booking_staff" name="Appointment booking staff">
        <t t-call="website.layout">

            <t t-set="body_classname" t-value="'book_step_page'"/>
            <t t-set="no_header" t-value="True"/>
            <t t-set="no_footer" t-value="True"/>
            <div id="wrap">
                <div class="header_booking_page">
                    <div class="container">
                        <div class="position-relative">
                            <div class="prev_step_booking">
                                <i class="fa fa-arrow-left"/>
                            </div>
                            <div class="close_booking">
                                <a href="/">
                                    <i class="fa fa-times"/>
                                </a>
                            </div>
                            <div class="title_current_step">
                                <span class="text-step">Step 2 of 4</span>
                                <h3>Select staff for <t t-esc="product_name"/></h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="content_booking_page">
                    <form t-att-action="action_url" method="post" role="form"
                          id="form_staff">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <input type="hidden" name="coiffure_id" id="js_coiffure_id"/>
                        <div class="container">
                            <div class="row">
                                <div class="col-12 col-lg-8">
                                    <div class="card-box pos-sticky">
                                        <div class="card-box-item bg-hover-1" t-foreach="staffs" t-as="staff">
                                            <div class="card-box-body js_send_form_staff"
                                                 t-attf-onclick="send_form_staff(#{staff.id})">
                                                <div class="d-flex align-items-center">
                                                    <t t-if="staff.image_1920">
                                                        <img class="rounded-circle"
                                                         t-attf-src="data:image/png;base64,{{staff.image_1920}}"
                                                         alt="coiffure"
                                                         style="height: 56px !important; width: 56px!important"/>
                                                    </t>

                                                    <h6 t-esc="staff.name" class="px-3"/>
                                                    <div class="ml-auto" style="font-size:24px">
                                                        <i class="fa fa-angle-right"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-4 d-none d-lg-block">
                                    <t t-call="website_custom.invoice_appointment_book"/>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>
</odoo>