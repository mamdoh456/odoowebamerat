    <template id="appointment_booking_time" name="Appointment booking time">
        <t t-call="website.layout">

            <t t-set="body_classname" t-value="'book_step_page'"/>
            <t t-set="no_header" t-value="True"/>
            <t t-set="no_footer" t-value="True"/>
            <div id="wrap">
                <div class="header_booking_page">
                    <div class="container">
                        <div class="position-relative">
                            <div class="prev_step_booking">
                                <i class="fa fa-arrow-left"/>
                            </div>
                            <div class="close_booking">
                                <a href="/">
                                    <i class="fa fa-times"/>
                                </a>
                            </div>
                            <div class="title_current_step">
                                <span class="text-step">Step 3 of 4</span>
                                <h3>Select time with
                                    <t t-esc="coiffure.name"/>
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="content_booking_page">
                    <form t-att-action="action_url" method="post"
                          role="form" id="form_time">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <input type="hidden" name="coiffure_id" t-att-value="coiffure.id"/>
                        <input type="hidden" name="slot_date" t-att-value="slot_date"/>
                        <input type="hidden" name="schedule_slot_id"/>
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-8">
                                    <t t-if="len(slots_data)>0">
                                        <div class="pos-sticky tabs_loading js_loading">
                                            <div class="spinner-border" role="status">
                                                <span class="sr-only">Loading...</span>
                                            </div>
                                        </div>
                                        <div class="tabs_scroll js_tabs_scroll d-none">
                                            <div class="pos-sticky">
                                                <div class="scroll_header">
                                                    <div class="scroll_header_content">
                                                        <h6 class="month">May</h6>
                                                        <div id="timeScrollTabs"
                                                             class="scroll_tabs_time">
                                                            <t t-foreach="slots_data" t-as="slot_id">
                                                                <t t-set="slot_data" t-value="slots_data[slot_id]"/>
                                                                <a href="#" t-attf-rel="slot#{slot_data['id']}">
                                                                    <span class="text-muted"
                                                                          t-esc="slot_data['date'].strftime('%a')"/>
                                                                    <br/>
                                                                    <span class=""
                                                                          t-esc="slot_data['date'].strftime('%d')"/>
                                                                </a>
                                                            </t>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div>
                                                <t t-foreach="slots_data" t-as="slot_id">
                                                    <t t-set="slot_data" t-value="slots_data[slot_id]"/>
                                                    <div class="card-box" t-attf-id="slot#{slot_data['id']}"
                                                         t-att-data-slotdate-id="slot_data['id']">
                                                        <t t-if="len(slot_data['slots'])>0">
                                                            <div class="card-box-item bg-hover-1 js_appointment_slot"
                                                                 t-foreach="slot_data['slots']"
                                                                 t-as="slot" t-att-data-slotline-id="slot.id">
                                                                <div class="card-box-body">
                                                                    <div class="d-flex align-items-center">
                                                                        <h6 t-esc="slot.name" class="px-3"/>
                                                                        <div class="ml-auto" style="font-size:24px">
                                                                            <i class="fa fa-angle-right"/>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </t>
                                                        <t t-else="">
                                                            <div class="card-box-item">
                                                                <div class="card-box-body">
                                                                    <p class="m-0 text-center">You cannot book this day,
                                                                        please
                                                                        choose another day
                                                                    </p>
                                                                </div>
                                                            </div>
                                                        </t>
                                                    </div>
                                                </t>
                                            </div>
                                        </div>
                                    </t>
                                    <t t-else="">
                                        <div class="pos-sticky tabs_loading pt32 pb32 text-center">
                                            <p class="text-muted pt32 pb32">
                                                No slots available currently
                                            </p>
                                        </div>
                                    </t>
                                </div>
                                <div class="col-lg-4 d-none d-lg-block">
                                    <t t-call="website_custom.invoice_appointment_book"/>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>
</odoo>