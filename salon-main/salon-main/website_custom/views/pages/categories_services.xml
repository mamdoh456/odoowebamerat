<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="categories_services" name="Categories services">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="heading_page bg_head_cat_serv bg-img-cover">
                    <h1 class="color-white">Our Services</h1>
                </div>
                <section class="o_categories_services">
                    <div class="container">
                        <div class="title_sub_heading text-center pb32">
                            <h4 class="sub_title">We are awesome</h4>
                            <h1 class="mb-3">
                                <t t-if="appointment_type=='home_booking'">
                                    Home booking
                                </t>
                                <t t-if="appointment_type=='local_reservation'">
                                    Local reservation
                                </t>
                            </h1>
                            <img src="/website_custom/static/src/img/section-heading-separetor.png" class="img-fluid"/>
                        </div>
                        <div class="row">
                            <t t-if="len(categories)>0">
                                <div class="col-md-4" t-foreach="categories" t-as="categorie">
                                    <div class="box_categ_serv mt24">
                                        <span t-field="categorie.image"
                                              t-options="{'widget': 'image','class':'img-fuild box_categ_serv_img'}"/>
                                        <div class="box_categ_serv_content">
                                            <h3 class="box_categ_serv_title" t-esc="categorie.name"/>
                                            <a class="btn btn-secondary rounded-pill my-3"
                                               t-attf-href="/appointment/#{appointment_type}/booking">Book Now
                                            </a>
                                        </div>

                                    </div>
                                </div>
                            </t>
                            <t t-else="">
                                <div class="col-12 pt32 pb32 text-center">
                                    <p class="text-muted ">
                                        No service available currently
                                    </p>
                                    <div class="py-4">
                                        <a href="/">Back to home <i class="fa fa-angle-right" /></a>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>
</odoo>