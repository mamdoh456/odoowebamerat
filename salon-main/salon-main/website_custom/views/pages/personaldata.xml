    <template id="appointment_booking_personaldata" name="Appointment booking personal data">
        <t t-call="website.layout">

            <t t-set="body_classname" t-value="'book_step_page'"/>
            <t t-set="no_header" t-value="True"/>
            <t t-set="no_footer" t-value="True"/>
            <div id="wrap">
                <div class="header_booking_page">
                    <div class="container">
                        <div class="position-relative">
                            <div class="prev_step_booking">
                                <i class="fa fa-arrow-left"/>
                            </div>
                            <div class="close_booking">
                                <a href="/">
                                    <i class="fa fa-times"/>
                                </a>
                            </div>
                            <div class="title_current_step">
                                <span class="text-step">Step 4 of 4</span>
                                <h3>Enter your information</h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="content_booking_page">
                    <form t-attf-action="/save/appointment" method="post"
                          role="form" id="form_personal_data">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <input type="hidden" name="coiffure_id" t-att-value="coiffure.id"/>
                        <input type="hidden" name="slot_date" t-att-value="slot_date"/>
                        <input type="hidden" name="schedule_slot_id" t-att-value="schedule_slot_id"/>
                        <div class="container">
                            <div class="row">
                                <div class="col-12 col-lg-8">
                                    <div class="card-box pos-sticky">
                                        <div class="card-box-item ">
                                            <div class="card-box-body">
                                                <div class="form-group">
                                                    <label for="inputfirstname">First Name</label>
                                                    <input name="firstname" required="required"
                                                           class="form-control d-block"
                                                           placeholder="First Name. &#10;&#10;Example: Abdul Nasser"/>
                                                </div>
                                                <div class="form-group">
                                                    <label for="inputlastname">Last Name</label>
                                                    <input name="lastname" required="required"
                                                           class="form-control d-block"
                                                           placeholder="Last Name. &#10;&#10;Example: Al-Amri"/>
                                                </div>
                                                <div class="form-group">
                                                    <label for="inputemail">Email</label>
                                                    <input name="email" type="email" required="required"
                                                           class="form-control d-block"
                                                           placeholder="Email. &#10;&#10;Example: example@gmail.com"/>
                                                </div>
                                                <div class="form-group" id="mobile">
                                                    <label for="inputmobile">Mobile</label>
                                                    <input name="mobile" type="text" required="required"
                                                           title="Please enter valid mobile number"
                                                           class="form-control d-block"
                                                           placeholder="Mobile. &#10;&#10;Example: +966xxxxxxxxx"/>
                                                    <div id="validationMobileFeedback" class="invalid-feedback">
                                                        Please enter valid mobile number.
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label for="inputBirthday">Birthday</label>
                                                    <div class="input-group datetime"
                                                         id="birthday"
                                                         data-target-input="nearest">
                                                        <input type="text"
                                                               placeholder="Birthday. &#10;&#10;Example: xxxx/xx/xx"
                                                               required="required"
                                                               class="form-control datetimepicker-input"
                                                               data-target="#birthday"
                                                               name="birthday"/>
                                                        <div class="input-group-append"
                                                             data-target="#birthday"
                                                             data-toggle="datetimepicker">
                                                            <div class="input-group-text">
                                                                <i class="fa fa-calendar"></i>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label for="inputlocation">Location</label>
                                                    <input name="birthday" type="text" required="required"
                                                           class="form-control d-block"
                                                           placeholder="Mention your location by Google map url."/>
                                                </div>
                                                <div class="d-flex justify-content-end">
                                                    <button type="submit" class="btn btn-tripartite rounded-pill">
                                                        Confirm
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-4 d-none d-lg-block">
                                    <t t-call="website_custom.invoice_appointment_book"/>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </t>
    </template>
</odoo>