<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Specialty -->
    <record id="view_coiffure_specialty_tree" model="ir.ui.view">
        <field name="name">coiffure.specialty.tree</field>
        <field name="model">coiffure.specialty</field>
        <field name="arch" type="xml">
            <tree string="Specialty">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_acs_coiffure_specialty_form" model="ir.ui.view">
        <field name="name">coiffure.specialty.form</field>
        <field name="model">coiffure.specialty</field>
        <field name="arch" type="xml">
            <form string="Specialtys">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Specialty"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_coiffure_specialty">
        <field name="name">Specialty</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">coiffure.specialty</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add a Specialty.
            </p>
        </field>
    </record>

    <!-- Coiffure Degree -->
    <record id="view_coiffure_degree_tree" model="ir.ui.view">
        <field name="name">coiffure.degree.tree</field>
        <field name="model">coiffure.degree</field>
        <field name="arch" type="xml">
            <tree string="Coiffure Degree">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_acs_coiffure_degree_form" model="ir.ui.view">
        <field name="name">coiffure.degree.form</field>
        <field name="model">coiffure.degree</field>
        <field name="arch" type="xml">
            <form string="Coiffure Degree">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="MBBS"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_coiffure_degree">
        <field name="name">Coiffure Degree</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">coiffure.degree</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add a Coiffure Degree.
            </p>
        </field>
    </record>

    <!-- Coiffure -->coiffure_name
    <record id="view_coiffure_tree" model="ir.ui.view">
        <field name="name">coiffure.tree</field>
        <field name="model">hms.coiffure</field>
        <field name="arch" type="xml">
            <tree string="Coiffure">
                <field name="name"/>
                <field name="code" string="Coiffure ID"/>
                <field name="mobile"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="coiffure_kanban_view">
        <field name="name">coiffure.kanban</field>
        <field name="model">hms.coiffure</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban string="Coiffure">
                <field name="id"/>
                <field name="name"/>
                <field name="specialty_id"/>
                <field name="degree_ids"/>
                <field name="code"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <t t-set="placeholder" t-value="'/base/static/img/avatar_grey.png'"/>
                            <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image:url('#{kanban_image('hms.coiffure', 'image_128', record.id.raw_value, placeholder)}')"/>
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <strong class="oe_partner_heading"><field name="display_name"/></strong>
                                    <div class="o_kanban_record_headings" id="dr_heading">
                                    </div>
                                </div>
                                <field name="degree_ids" widget="many2many_tags"/>
                                <ul id="code_ul">
                                    <li><b>Code:</b> <field name="code"/></li>
                                    <li t-if="record.specialty_id.raw_value"><b>Specialty:</b> <field name="specialty_id"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_coiffure_form" model="ir.ui.view">
        <field name="name">coiffure.form</field>
        <field name="model">hms.coiffure</field>
        <field name="arch" type="xml">
            <form string="coiffure">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <label for="name" string="Name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Coiffure's Name"/>
                        </h1>
                        <div>
                            <label for="degree_ids" string="Education" class="oe_edit_only"/>
                            <field name="degree_ids" widget="many2many_tags" placeholder="e.g. MBBS"/>
                        </div>
                    </div>
                    <group>
                        <group>
                            <field name="code" string="Coiffure ID" style="width: 20%%" readonly="1"/>
                            <field name="user_id" required="False" invisible="1"/>
                        </group>
                        <group>
                            <field name="specialty_id" />
                            <field name="product_services_ids" required="True" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="General Information" name="gneral_info">
                            <group>
                                <group>
                                </group>
                                <group>
                                    <field name="phone" placeholder="e.g. +506 5555 5555"/>
                                    <field name="mobile"/>
                                    <field name="email" widget="email"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_coiffure_search" model="ir.ui.view">
        <field name="name">coiffure.search</field>
        <field name="model">hms.coiffure</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <search string="coiffure">
                <field name="name"/>
                <field name="code"/>
                <field name="specialty_id"/>
                <field name="mobile"/>
                <field name="email"/>
                <separator/>

            </search>
        </field>
    </record>

    <record id="action_coiffure" model="ir.actions.act_window">
        <field name="name">coiffure</field>
        <field name="res_model">hms.coiffure</field>
        <field name="view_mode">kanban,tree,form,search</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add a coiffure.
            </p>
        </field>
    </record>

</odoo>