<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_config_view_form_inherit_unpaid_invoice_product" model="ir.ui.view">
        <field name="name">pos.config.form.inherit.unpaid.invoice.product</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='iface_tipproduct']" position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label string="Unpaid Invoice Product" for="unpaid_invoice_product_id"
                               class="col-lg-3 o_light_label"/>
                        <field name="unpaid_invoice_product_id"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
