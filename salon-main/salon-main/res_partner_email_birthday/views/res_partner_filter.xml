<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_res_partner_birthday_filter" model="ir.ui.view">
        <field name="name">res.partner.birthday.filter</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <filter name="inactive" position="before">
                <filter string="Current Week Birthday"
                        name="birthday_week"
                        domain="[('birthday','&lt;',(context_today()+relativedelta(days=7)).strftime('%Y-%m-%d 23:59:59')), ('birthday','&gt;=',context_today().strftime('%Y-%m-%d 00:00:00'))]"/>
            </filter>
        </field>
    </record>


    <record id="res_partner_view_buttons_gift_card" model="ir.ui.view">
        <field name="name">res.partner.view.gift.card.buttons</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="object" name="action_send_gift_card" icon="fa-gift">
                    Gift Card
                </button>
            </div>
        </field>
    </record>
</odoo>