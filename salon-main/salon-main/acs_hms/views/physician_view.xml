    <record id="view_coiffure_form" model="ir.ui.view">
        <field name="name">coiffure.form</field>
        <field name="model">hms.coiffure</field>
        <field name="inherit_id" ref="acs_hms_base.view_coiffure_form"/>
        <field name="arch" type="xml">

            <div name="button_box" position="inside">
                <button name="action_treatment" groups="acs_hms.group_hms_jr_doctor" type="object"
                        class="oe_stat_button" icon="fa-user-md">
                    <field string="Treatments" name="treatment_count" widget="statinfo"/>
                </button>

                <button name="action_appointment" groups="acs_hms.group_hms_jr_doctor" type="object"
                        class="oe_stat_button" icon="fa-stethoscope">
                    <field string="Appointment" name="appointment_count" widget="statinfo"/>
                </button>

                <button name="action_prescription" groups="acs_hms.group_hms_jr_doctor" type="object"
                        class="oe_stat_button" icon="fa-wpforms">
                    <field string="Prescriptions" name="prescription_count" widget="statinfo"/>
                </button>
            </div>

            <field name="user_id" position="after">
                <field name="consultaion_service_id" domain="[('type','=','service'), ('sale_ok','=',True)]"
                       context="{'default_type':'service', 'default_salon_product_type':'consultation'}"/>
                <field name="followup_service_id" domain="[('type','=','service'),('sale_ok','=',True)]"
                       context="{'default_type':'service','default_salon_product_type':'consultation'}"/>
                <field name="appointment_duration" widget="float_time"/>
                <field name="is_primary_surgeon"/>
            </field>

            <page name="gneral_info" position="after">
                <page string="Personal Information" groups="acs_hms_base.group_hms_manager">
                    <separator string="Signature"/>
                    <field name="signature" widget="signature"/>
                </page>
            </page>
        </field>
    </record>

    <record id="view_coiffure_search" model="ir.ui.view">
        <field name="name">Coiffures Barcode</field>
        <field name="model">hms.coiffure</field>
        <field name="inherit_id" ref="acs_hms_base.view_coiffure_search"/>
        <field name="arch" type="xml">
            <search>
                <separator/>
                <filter string="Primary Surgeon" name="is_primary_surgeon" domain="[('is_primary_surgeon','=',1)]"/>
            </search>
        </field>
    </record>


</odoo>